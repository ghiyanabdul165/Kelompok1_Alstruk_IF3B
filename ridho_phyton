nama = input("Masukkan nama kamu: ")
usia = int(input("Masukkan usia kamu: "))
tinggi = float(input("Masukkan tinggi kamu (cm): "))
is_student = input("Apakah kamu seorang pelajar? (ya/tidak): ")
is_student = is_student.lower() == "ya"

print("\n--- Data Kamu ---")
print("Nama:", nama)
print("Usia:", usia)
print("Tinggi:", tinggi)
print("Status Pelajar:", is_student)